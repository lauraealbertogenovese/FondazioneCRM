# Database Configuration
POSTGRES_DB=fondazione_crm
POSTGRES_USER=crm_user
POSTGRES_PASSWORD=your_secure_password_here
DATABASE_URL=postgresql://crm_user:your_secure_password_here@postgres:5432/fondazione_crm

# JWT Configuration (Generate a secure secret for production)
JWT_SECRET=your_jwt_secret_here_minimum_32_characters

# API Gateway Configuration
API_GATEWAY_URL=http://api-gateway:3001

# API Configuration
REACT_APP_API_URL=http://localhost:3001

# Service URLs (for Docker Compose internal communication)
AUTH_SERVICE_URL=http://auth-service:3002
PATIENT_SERVICE_URL=http://patient-service:3003
CLINICAL_SERVICE_URL=http://clinical-service:3004
GROUP_SERVICE_URL=http://group-service:3005
BILLING_SERVICE_URL=http://billing-service:3006

# Frontend Configuration
REACT_APP_API_BASE_URL=http://localhost:3001
REACT_APP_AUTH_SERVICE_URL=http://localhost:3001
REACT_APP_PATIENT_SERVICE_URL=http://localhost:3001
REACT_APP_CLINICAL_SERVICE_URL=http://localhost:3001
REACT_APP_FRONTEND_PORT=3007

# CORS Configuration
FRONTEND_URL=http://localhost:3007
ADMIN_URL=http://localhost:3008

# Development Configuration
NODE_ENV=development
GENERATE_SOURCEMAP=false
BROWSER=none
FAST_REFRESH=true
WDS_SOCKET_PORT=3007

# Default Port (overridden per service in docker-compose)
PORT=3001

# AWS Configuration (for production deployment)
AWS_REGION=your_aws_region
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key

# Email Configuration (for future notifications)
SMTP_HOST=your_smtp_host
SMTP_PORT=587
SMTP_USER=your_smtp_username
SMTP_PASS=your_smtp_password

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads