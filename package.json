{
  "name": "fondazione-crm",
  "version": "1.0.0",
  "description": "Sistema CRM per Fondazione - Gestione Pazienti, Cartelle Cliniche e Gruppi di Supporto",
  "main": "index.js",
  "scripts": {
    "dev": "docker-compose -f docker/docker-compose.dev.yml up -d --build",
    "prod": "docker-compose -f docker/docker-compose.prod.yml up -d --build",
    "stop": "docker-compose -f docker/docker-compose.dev.yml down",
    "stop:prod": "docker-compose -f docker/docker-compose.prod.yml down",
    "logs": "docker-compose -f docker/docker-compose.dev.yml logs -f",
    "db:setup": "docker-compose -f docker/docker-compose.dev.yml up -d postgres && npm run db:migrate",
    "db:migrate": "node database/migrate.js",
    "db:seed": "node database/seed.js"
  },
  "keywords": [
    "crm",
    "fondazione",
    "pazienti",
    "cartelle-cliniche",
    "gruppi-supporto",
    "microservizi",
    "react",
    "postgresql"
  ],
  "author": "Fondazione CRM Team",
  "license": "MIT",
  "devDependencies": {
    "nodemon": "^3.0.1"
  },
  "dependencies": {
    "bcrypt": "^6.0.0",
    "dotenv": "^17.2.2",
    "pg": "^8.16.3"
  }
}
