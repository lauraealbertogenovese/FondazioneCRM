FROM node:18-alpine

WORKDIR /app

# Copy package files
COPY package*.json ./

# Install dependencies
RUN npm install --only=production

# Copy source code
COPY src/ ./src/

# Create non-root user
RUN addgroup -g 1001 -S nodejs
RUN adduser -S group -u 1001

# Change ownership
RUN chown -R group:nodejs /app
USER group

# Expose port
EXPOSE 3005

# Start the application
CMD ["npm", "start"]
