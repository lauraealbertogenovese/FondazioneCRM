FROM node:18-alpine

WORKDIR /app

# Copy package files
COPY package*.json ./

# Install dependencies
RUN npm ci --only=production

# Copy source code
COPY src/ ./src/

# Create non-root user
RUN addgroup -g 1001 -S nodejs
RUN adduser -S auth -u 1001

# Change ownership
RUN chown -R auth:nodejs /app
USER auth

# Expose port
EXPOSE 3002

# Start the application
CMD ["npm", "start"]
